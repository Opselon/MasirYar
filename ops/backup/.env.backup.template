# -- PostgreSQL Configuration --
PG_HOST=postgres-db
PG_PORT=5432
PG_USER=backup_user
PG_PASSWORD=supersecretpassword
# Optional: Specify databases to back up, comma-separated. If empty, all databases will be backed up.
PG_DATABASES=

# -- Redis Configuration --
REDIS_HOST=redis
REDIS_PORT=6379

# -- File Backup Configuration --
# Comma-separated list of absolute paths to back up
FILE_PATHS=/data/uploads,/data/config

# -- Backup Storage and Retention --
BACKUP_DIR=/backups
RETENTION_DAYS=7

# -- Scheduler Configuration --
# Cron schedule for daemon mode
CRON_SCHEDULE="0 2 * * *"

# -- Locking Configuration --
# A unique integer for Postgres advisory lock
ADVISORY_LOCK_KEY=123456789

# -- Optional: GPG Encryption --
GPG_ENABLED=false
GPG_RECIPIENT=

# -- Optional: Telegram Notification --
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
